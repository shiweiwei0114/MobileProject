<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="tcss450.uw.edu.mobileproject.AboutUsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/question_box"
        android:textSize="30sp"
        android:layout_marginTop="20dp"

        android:text="@string/about_us"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="169dp"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/kyle"/>

        <TextView
            android:layout_width="112dp"
            android:layout_height="140dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/kyle_details"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/question_box" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="214dp"
            android:id="@+id/imageView2"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/dolphin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="163dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/kyle"
            android:id="@+id/textView4"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:textColor="@color/question_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="239dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/weiwei"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center"
            android:textColor="@color/question_box" />

        <TextView
            android:layout_width="112dp"
            android:layout_height="231dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/weiwei_details"
            android:id="@+id/textView6"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@color/question_box" />


    </GridLayout>

</RelativeLayout>
